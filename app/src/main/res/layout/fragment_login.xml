<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_17sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/round_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text=" Back"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_150sdp"
        android:background="@drawable/login_screen_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/sf_pro_display"
            android:text="Log into your account"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="350dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textColorHint="#919191" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="350dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textColorHint="#919191" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_display"
            android:text="Forgot Password?"
            android:textColor="#5B5C5B" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:buttonTintMode="@color/black"
            android:fontFamily="@font/sf_pro_display"
            android:text="Remember me"
            android:textColor="@color/black" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/login"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/intro_start_bg_black"
            android:text="Log in"
            android:textColor="@color/white"
            app:spinning_bar_color="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text="Don't have an account?"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/create_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text="Create an account"
            android:textColor="#001067"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_fb" />

            <ImageView
                android:id="@+id/google"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_google" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>